<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTaskUpdateOne"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".fragments.FragmentTaskUpdateOne">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="Creación de tareas"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTitleUpdateTask"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Nombre de tarea"
                android:inputType="text" />

            <LinearLayout
                android:id="@+id/linearTitleTaskUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tecnico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado tarea" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTaskCreation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerTecnicoTareaUpdateTask"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinnerStatusTareaUpdateTask"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:entries="@array/taskStatus"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo de tarea" />

            <Spinner
                android:id="@+id/spinnerTipoTareaUpdateTask"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/tipoTarea"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Fecha de finalización" />

            <CalendarView
                android:id="@+id/calendarViewUpdateTask"
                android:layout_width="match_parent"
                android:layout_height="294dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/buttonUpdateTaskNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20sp"
                android:layout_gravity="center"
                android:text="Next" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>