<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragmentTaskCreationTwo"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:clickable="true"
    tools:context=".fragments.FragmentTaskCreationTwo">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapTaskCreation"
            android:background="#FFF"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.FragmentTask"
            android:contentDescription="Google Maps"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_gravity="bottom">
                <Button
                    android:id="@+id/crearAreaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="crear area"
                    android:layout_weight="1"
                    android:layout_margin="10sp"/>

                <Button
                    android:id="@+id/crearTareaSaveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="guardar"
                    android:layout_weight="1"
                    android:layout_margin="10sp"/>

        </LinearLayout>
</FrameLayout>